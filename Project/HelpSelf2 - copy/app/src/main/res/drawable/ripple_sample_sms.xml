<ripple
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="#FFFFFF">
    <!--ripple中的color為點擊時的顏色-->

    <!--基本顏色-->
    <item>
        <shape>
        <corners
            android:radius="6dp"
            />
            <gradient
                android:angle="45"
                android:centerX="49%"
                android:centerColor="#8D0BFF"
                android:startColor="#D60DBB"
                android:endColor="#3E0B52"
                android:type="linear"
                />
        <padding
            android:left="0dp"
            android:top="0dp"
            android:right="0dp"
            android:bottom="0dp"
            />
        <size
            android:width="270dp"
            android:height="60dp"
            />
        <stroke
            android:width="3dp"
            android:color="#00000000"
            />
        </shape>
    </item>
</ripple>